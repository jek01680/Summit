  <%- include('header.ejs') %>

  <section id="contact" class="section light">
  <div class="container">
    <h2 class="section-title">견적 문의</h2>
    <p class="section-intro">필요하신 내용을 남겨주시면 빠르게 연락드리겠습니다.</p>
    
    <div class="form-card">
      <form id="contactForm" onsubmit="sendMail(event)">
        <div class="form-group">
          <label for="name">이름 / 회사명 *</label>
          <input type="text" id="name" required>
        </div>
        <div class="form-group">
          <label for="email">이메일 *</label>
          <input type="email" id="email" required>
        </div>
        <div class="form-group">
          <label for="phone">연락처 *</label>
          <input type="text" id="phone" required>
        </div>
        <div class="form-group">
          <label for="message">문의사항 *</label>
          <textarea id="message" rows="5" required></textarea>
        </div>
        <button type="submit" id="submitButton">제출하기</button>
      </form>
    </div>
  </div>
</section>

  <%- include('footer.ejs') %>
